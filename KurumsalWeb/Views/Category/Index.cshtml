@model IEnumerable<KurumsalWeb.Models.Category>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="card">
    <div class="card-body">
        <h5 class="card-title" style="float: left">Kategoriler</h5>
        
        <p style="margin-left: 17%; margin-top: 2%">
            @Html.ActionLink("Yeni Oluştur", "Create")
        </p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.Raw(item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.CategoryId }) |
                        @Html.ActionLink("Detay", "Details", new { id = item.CategoryId }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.CategoryId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>