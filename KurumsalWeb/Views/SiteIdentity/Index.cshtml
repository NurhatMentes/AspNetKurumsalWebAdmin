@model IEnumerable<KurumsalWeb.Models.Model.SiteIdentity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card">
    <div class="card-body">
        <h5 class="card-title" style="float: left">Site Kimlik</h5>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Keywords)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <div>
                <th>
                    @Html.DisplayNameFor(model => model.LogoUrl)
                </th>
    </div>
                <th>
                    @Html.DisplayNameFor(model => model.Rank)
                </th>
                <th>İşlemler</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Keywords)
                    </td>
                    <td>
                        @Html.Raw(item.Description)
                    </td>
                    <td>
                        <img src="@item.LogoUrl" width="80" height="70"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rank)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new {id = item.IdentityId})
                    </td>
                </tr>
            }

        </table>

    </div>
</div>