
@model KurumsalWeb.Models.Model.Blog

@{
    ViewBag.Title = "Blog Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Blog</h5>

        @*<form class="row g-3" method="post" enctype="multipart/form-data" action="/Blog/Create/">*@
        @using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-12">
                <label for="inputNanme4" class="form-label">Başlık*</label>
                <input type="text" class="form-control" name="Title" id="Title" value="@Model.Title">
            </div>
            <div class="col-12">
                <label for="inputEmail4" class="form-label">Kategori*</label>
                @Html.DropDownList("CategoryId", null, new
                {
                    @class = "form-control"
                })
            </div>
            <div class="col-12">
                <label for="inputNanme4" class="form-label">İçerik*</label>
                <textarea name="Context" id="Context" class="ckeditor" required="">@Model.Context</textarea>
            </div>
            <div class="col-12">
                <label for="inputPassword4" class="form-label">Önceki Resim:</label>
                <img src="@Model.ImgUrl" width="250" height="150" />
            </div>
            <div class="col-12">
                <label for="inputPassword4" class="form-label">Resim</label>
                <input type="file" class="form-control" id="ImgUrl" name="ImgUrl" accept=".jpg,.png,.jpeg">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <button type="reset" class="btn btn-secondary"><a href="/Blog/Index" style="color: white">İptal</a></button>
            </div>
        }
        @*</form>*@<!-- Vertical Form -->
    </div>
</div>

