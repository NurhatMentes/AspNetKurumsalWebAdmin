
@model IEnumerable<KurumsalWeb.Models.Model.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card">
    <div class="card-body">
        <h5 class="card-title">Blog Kayıtları</h5>
        <a class="btn btn-outline-secondary"  href="/Blog/Create/">Yeni Blog Ekle</a>

        <!-- Table with stripped rows -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">Resim</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
               {
                   <tr>
                       <th scope="row">@item.BlogId</th>
                       <td>@item.Title</td>
                       <td>@item.Category.CategoryName</td>
                       <td><img src="@item.ImgUrl" width="100" height="100"/></td>
                       <td><a href="/Blog/Edit/@item.BlogId">Güncelle</a> |
                           <a href="/Blog/Delete/@item.BlogId">Sil</a></td>
                   </tr>
               }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->

    </div>
</div>