@model KurumsalWeb.Models.Model.Comment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Blog Yorumları - Düzenle</h5>

            <div class="form-horizontal">
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CommentId)

                <div class="form-group">
                    <b> @Html.LabelFor(model => model.FirstLastName, htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FirstLastName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.FirstLastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top: 1%">
                    <b> @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top: 1%">
                    <b> @Html.LabelFor(model => model.CommentContent, htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CommentContent, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.CommentContent, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top: 1%">
                    <b> @Html.LabelFor(model => model.Confirmation, htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Confirmation)
                            @Html.ValidationMessageFor(model => model.Confirmation, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group" style="margin-top: 1%">
                    <b> @Html.LabelFor(model => model.BlogId, "BlogId", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.DropDownList("BlogId",null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.BlogId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top: 1%">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
