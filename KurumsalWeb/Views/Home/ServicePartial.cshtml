
@model IEnumerable<KurumsalWeb.Models.Model.Service>

@{
    Layout = null;
}


<div class="col-lg-12">
    <h4 class="heading">Hizmetler</h4>
    <div class="row">
        <section id="projects">
            <ul id="thumbs" class="portfolio">
              @foreach (var item in Model)
              {
                  <!-- Item Project and Filter Name -->
                  <li class="col-lg-3 design" data-id="id-0" data-type="web">
                      <div class="item-thumbs">
                          <!-- Fancybox - Gallery Enabled - Title - Full Image -->
                          <a class="hover-wrap fancybox" data-fancybox-group="gallery" title="@item.Title" href="@item.ImgUrl">
                              <span class="overlay-img"></span>
                              <span class="overlay-img-thumb font-icon-asterisk"><p style="text-align: center">@item.Title</p></span>
                          </a>
                          <!-- Thumb Image and Description -->
                          <img src="@item.ImgUrl" alt="@item.Description">
                      </div>
                  </li>
                  <!-- End Item Project -->
              }
            </ul>
        </section>
    </div>
</div>