
@model KurumsalWeb.Models.Model.Blog

@{
    ViewBag.Title = "BlogDetail";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">Blog Detay</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">

                <article>
                    <div class="post-image">
                        <div class="post-heading">
                            <h3><a href="/Home/BlogDetail/@Model.BlogId">@Model.Title</a></h3>
                            <ul class="meta-post">
                                <li><i class="icon-folder-open"></i><a href="#"> @Model.Category.CategoryName</a></li>
                            </ul>
                        </div>
                        
                        <br>
                        <img src="@Model.ImgUrl" alt="@Model.Title" />
                    </div>

                    <p>
                        @Html.Raw(Model.Content)
                    </p>
                    <div class="bottom-article">

                    </div>
                </article>


            </div>
            <div class="col-lg-4">
                <aside class="right-sidebar">
                    <div class="widget">
                        <form class="form-search">
                            <input class="form-control" type="text" placeholder="Search..">
                        </form>
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Kategoriler</h5>
                        @{
                            Html.RenderAction("BlogCategoryPartial", "Home");
                        }
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Son Blog Kayıtları</h5>
                        <ul class="recent">
                            @{
                                Html.RenderAction("BlogSavePartial", "Home");
                            }
                        </ul>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</section>



