@model IEnumerable<KurumsalWeb.Models.Model.Admin>

@{
    ViewBag.Title = "Admins";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-body">


        <h5 class="card-title">Yöneticiler</h5>

        <p>
            @Html.ActionLink("Yeni Ekle", "Create")
        </p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Auth)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Auth)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new {  id=item.AdminId }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.AdminId })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>